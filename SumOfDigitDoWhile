//Sum of digit using do while loop
package JavaDemo;

import java.util.Scanner;

public class SumOfDigitDoWhile {
	 public static void main(String args[]) {
	        System.out.print("Enter the number: ");
	        Scanner sc = new Scanner(System.in);
	        int num = sc.nextInt(); // Original number to process
	        int rem, sum = 0;
	        do {
	        	rem=num%10;
	        	sum=sum+rem;
	        	num=num/10;
	        }while(num>0);
	        
	        System.out.print("Sum of digit using do while: "+sum);
	 }
}
